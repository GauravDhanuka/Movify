<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Fav Movies Reviewed</h1>
    <p>Keep on Movify</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class=".col-sn-6 col-md-3"></6>
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>        
      </div>
    </div>
  <% end %>
</div>